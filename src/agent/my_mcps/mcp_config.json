{
  "mcpServers": {
      "filesystem": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "--mount", "type=bind,src=${WORKSPACE},dst=/projects/workspace",
          "mcp/filesystem",
          "/projects"
        ],
        "transport": "stdio"
      }
    }
  }
