{
    // https://github.com/ArjanCodes/examples/blob/main/2024/vscode_python/.vscode/settings.json
    // Python settings
    "[python]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "charliermarsh.ruff",
      "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "always",
        "source.organizeImports.ruff": "explicit",
      },
      
    },
    // ruff settings
    "ruff.fixAll": true,
    "ruff.organizeImports": true,
    "python.analysis.autoSearchPaths": true,

    "python.analysis.extraPaths": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/notebooks"
    ],
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // "ruff.configuration": "${workspaceFolder}/.ruff.toml",
    "python.envFile": "${workspaceFolder}/.env",
    "python.terminal.activateEnvironment": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.packageIndexDepths": [
      {
        "name": "langchain_core",
        "depth": 2,
        "includeAllSymbols": false
      },
      {
        "name": "langgraph",
        "depth": 3,
        "includeAllSymbols": true
      }
    ],
    // Test settings
    "python.testing.pytestEnabled": true,
    "python.analysis.enablePytestSupport": true,
    "python.testing.unittestEnabled": false,
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.pytestPath": ".venv/bin/python",
    "python.testing.autoTestDiscoverOnSaveEnabled": true, // gemini
    "python.analysis.typeCheckingMode": "off", // gemini
    "files.exclude": {
    "**/*.egg-info": true,
    "**/htmlcov": true,
    "**/~$*": true,
    "**/.coverage.*": true,
    // "**/.venv": true,
    "**/.ipynb_checkpoints": true,
    "**/__pycache__": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    ".python-version":true,
    "**.langgraph_api": true
  },
  
  "python.testing.pytestArgs": [
      "--verbose",
      // "tests/unit_tests",
      // "--rootdir=${workspaceFolder}"
  ],


  // MyPy settings
  "mypy.runUsingActiveInterpreter": true,
  // Notebook settings
  "notebook.output.scrolling": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",
  "notebook.scrolling.revealNextCellOnExecute": "none",
  "mypy.checkNotebooks": false,
  
  "notebook.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.pyright": "explicit",
    "source.fixAll.pyreverse": "explicit",
    "source.fixAll.pydocstyle": "explicit",
    "source.fixAll.pylint": "explicit"
  },
  "cSpell.words": [
    "agentic",
    "ainvoke",
    "checkpointer",
    "DUCKDUCKGO",
    "GOOGLESEARCH",
    "rootutils",
    "tavily"
  ],

}
